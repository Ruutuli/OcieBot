{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd api 2>/dev/null || true; npm ci && npm run build"
  },
  "deploy": {
    "startCommand": "cd api 2>/dev/null || true; npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

